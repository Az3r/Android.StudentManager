<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph.xml"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="tkpm.doan.student.ui.launch.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="tkpm.doan.student.ui.launch.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_studentFragment"
            app:destination="@id/studentFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_teacherFragment"
            app:destination="@id/teacherFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/studentFragment"
        android:name="tkpm.doan.student.ui.student.StudentFragment"
        android:label="StudentFragment"
        tools:layout="@layout/fragment_student">
        <action
            android:id="@+id/action_studentFragment_to_scheduleDetailFragment"
            app:destination="@id/scheduleDetailFragment"
            app:enterAnim="@anim/expand_enter"
            app:exitAnim="@anim/expand_exit"
            app:popEnterAnim="@anim/shrink_enter"
            app:popExitAnim="@anim/shrink_exit" />
        <argument
            android:name="studentId"
            app:argType="string"
            app:nullable="false" />
        <action
            android:id="@+id/action_studentFragment_to_notificationDetailFragment"
            app:destination="@id/notificationDetailFragment"
            app:enterAnim="@anim/expand_enter"
            app:exitAnim="@anim/expand_exit"
            app:popEnterAnim="@anim/shrink_enter"
            app:popExitAnim="@anim/expand_exit" />
    </fragment>
    <fragment
        android:id="@+id/scheduleDetailFragment"
        android:name="tkpm.doan.student.ui.student.ScheduleDetailFragment"
        android:label="@string/text_schedule"
        tools:layout="@layout/fragment_schedule_detail" />
    <fragment
        android:id="@+id/notificationDetailFragment"
        android:name="tkpm.doan.student.ui.student.NotificationDetailFragment"
        android:label="@string/text_notification"
        tools:layout="@layout/fragment_notification_detail" />
    <fragment
        android:id="@+id/teacherFragment"
        android:name="tkpm.doan.student.ui.teacher.TeacherFragment"
        android:label="TeacherFragment"
        tools:layout="@layout/fragment_teacher">
        <argument
            android:name="teacherId"
            app:argType="string" />
        <action
            android:id="@+id/action_teacherFragment_to_gradeDetailFragment"
            app:destination="@id/gradeDetailFragment"
            app:enterAnim="@anim/expand_enter"
            app:exitAnim="@anim/expand_exit"
            app:popEnterAnim="@anim/shrink_enter"
            app:popExitAnim="@anim/shrink_exit" />
    </fragment>
    <fragment
        android:id="@+id/gradeDetailFragment"
        android:name="tkpm.doan.student.ui.teacher.GradeDetailFragment"
        android:label="GradeDetailFragment"
        tools:layout="@layout/fragment_grade_detail">
        <action
            android:id="@+id/action_gradeDetailFragment_to_studentDetailFragment"
            app:destination="@id/studentDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/studentDetailFragment"
        android:name="tkpm.doan.student.ui.teacher.EditStudentFragment"
        android:label="StudentDetailFragment"
        tools:layout="@layout/fragment_student_profile" >
        <action
            android:id="@+id/action_studentDetailFragment_to_scoreEditorFragment"
            app:destination="@id/scoreEditorFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/scoreEditorFragment"
        android:name="tkpm.doan.student.ui.teacher.ScoreEditorFragment"
        android:label="Edit score"
        tools:layout="@layout/fragment_score_editor" />
</navigation>
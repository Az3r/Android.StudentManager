<resources>

    <style name="Label" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Content" parent="TextAppearance.MaterialComponents.Subtitle1">

    </style>

    <style name="Content.StartIcon">
        <item name="android:drawablePadding">12dp</item>
    </style>


    <style name="AppTitle" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ScoreLabel"></style>

    <style name="ScoreContent">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="ScoreSubject">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ScoreLabel.Average">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="ScoreContent.Average">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="LayoutItemPadding">
        <item name="paddingStart">12dp</item>
        <item name="paddingEnd">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>
</resources>
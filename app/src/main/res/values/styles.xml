<resources>

    <style name="Label" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Content" parent="TextAppearance.MaterialComponents.Subtitle1">

    </style>

    <style name="Content.StartIcon">
        <item name="android:drawablePadding">12dp</item>
    </style>

    <style name="Content.Important">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="ItemTitle" parent="TextAppearance.MaterialComponents.Headline5">

    </style>

    <style name="AppTitle" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="LayoutItemPadding">
        <item name="paddingStart">12dp</item>
        <item name="paddingEnd">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="ScoreLabel">
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="background">?attr/colorPrimary</item>
        <item name="titleTextStyle">@style/TextAppearance.AppCompat.Widget.ActionMode.Title</item>
    </style>
</resources>
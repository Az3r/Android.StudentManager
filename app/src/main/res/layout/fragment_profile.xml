<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.student.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/student_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="@string/desc_student_profile_image"
            android:src="@drawable/ic_picture" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:theme="@style/LayoutItemPadding">

                <TextView
                    style="@style/Label.Important"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_student_id" />

                <TextView
                    android:id="@+id/student_id"
                    style="@style/Content.StartIcon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_account"
                    tools:text="1712875" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:theme="@style/LayoutItemPadding">

                <TextView
                    style="@style/Label.Important"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_full_name" />

                <TextView
                    android:id="@+id/student_name"
                    style="@style/Content.StartIcon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_social"
                    tools:text="@tools:sample/full_names" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:theme="@style/LayoutItemPadding">

                <TextView
                    style="@style/Label.Important"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_class" />

                <TextView
                    android:id="@+id/student_class"
                    style="@style/Content.StartIcon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_class"
                    android:textAllCaps="true"
                    tools:text="12a1" />
            </LinearLayout>

            <include layout="@layout/seperator" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:theme="@style/LayoutItemPadding">

                <TextView
                    style="@style/Label.Important"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_gender" />

                <TextView
                    android:id="@+id/student_gender"
                    style="@style/Content.StartIcon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_gender"
                    tools:text="Male" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:theme="@style/LayoutItemPadding">

                <TextView
                    style="@style/Label.Important"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_birthday" />

                <TextView
                    android:id="@+id/student_birthday"
                    style="@style/Content.StartIcon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_birthday"
                    tools:text="21/08/1999" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:theme="@style/LayoutItemPadding">

                <TextView
                    style="@style/Label.Important"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_address" />

                <TextView
                    android:id="@+id/student_address"
                    style="@style/Content.StartIcon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_address"
                    tools:text="101/19 phuong 4 quan 5 thanh pho ho chinh minh" />
            </LinearLayout>

            <include layout="@layout/seperator" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:theme="@style/LayoutItemPadding">

                <TextView
                    style="@style/Label.Important"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_phone_number" />

                <TextView
                    android:id="@+id/student_phone"
                    style="@style/Content.StartIcon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_phone"
                    android:text="1234567890" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:theme="@style/LayoutItemPadding">

                <TextView
                    style="@style/Label.Important"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_email" />

                <TextView
                    android:id="@+id/student_email"
                    style="@style/Content.StartIcon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_email"
                    android:text="example@gmail.com" />
            </LinearLayout>

            <include layout="@layout/seperator" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_rate"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/student_rate_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:textSize="20sp"
                        tools:text="10" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/teacher_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/teacher_picture"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="bottom"
                            android:contentDescription="@string/desc_commentor_profile"
                            android:src="@drawable/ic_picture" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="12dp"
                            app:boxBackgroundColor="?attr/colorSurface"
                            app:hintEnabled="false">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/comment_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/msg_student_review" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/action_buttons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:gravity="end"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <Button
                            android:id="@+id/button_cancel"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_cancel" />

                        <Button
                            android:id="@+id/button_submit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_submit" />

                    </LinearLayout>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    tools:listitem="@layout/item_comment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>

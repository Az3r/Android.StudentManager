<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/Subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subject"
        android:theme="@style/ScoreSubject" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="6dp">

        <TextView
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:text="@string/text_15_minutes"
            android:theme="@style/ScoreLabel" />

        <TextView
            android:id="@+id/score_factor_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="10, 10, 10"
            android:theme="@style/ScoreContent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="6dp">

        <TextView
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:text="@string/text_45_minutes"
            android:theme="@style/ScoreLabel" />

        <TextView
            android:id="@+id/score_factor_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="10, 10, 10"
            android:theme="@style/ScoreContent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="6dp">

        <TextView
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:text="@string/semester"
            android:theme="@style/ScoreLabel" />

        <TextView
            android:id="@+id/score_factor_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="7.5, 8.5, 9.5"
            android:theme="@style/ScoreContent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="6dp">

        <TextView
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:text="@string/text_average"
            android:theme="@style/ScoreLabel.Average" />

        <TextView
            android:id="@+id/score_average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="7.5"
            android:theme="@style/ScoreContent.Average" />
    </LinearLayout>
</LinearLayout>